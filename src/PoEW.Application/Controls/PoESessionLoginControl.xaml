<UserControl x:Class="PoEW.Application.Controls.PoESessionLoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoEW.Application.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" d:DesignWidth="800" Height="80.667">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Name="txtPOESSESID" Height="23" Grid.Row="0" Grid.RowSpan="1" TextWrapping="Wrap" mah:TextBoxHelper.Watermark="POESSESID" HorizontalAlignment="Stretch"  VerticalAlignment="Top"/>
        <Label Name="lblHowToFindPOESSESID" Foreground="DeepSkyBlue" Cursor="Hand" MouseUp="lblHowToFindPOESSESID_MouseUp" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock TextDecorations="Underline">How to find my POESSESID?</TextBlock>
        </Label>


    </Grid>
</UserControl>
